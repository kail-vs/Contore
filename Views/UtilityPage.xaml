<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contore.Views.UtilityPage"
             xmlns:viewmodel="clr-namespace:Contore.ViewModel"
             x:DataType="viewmodel:UtilityViewModel"
             Shell.NavBarIsVisible="False">
    <Grid RowDefinitions="*,*,*"
          ColumnDefinitions="*,*,25,*,*">
        <Button Grid.Row="1"
                Grid.Column="1"
                WidthRequest="105"
                Text="Translation"
                TextColor="Ivory"
                FontSize="12"
                HeightRequest="50"
                BorderWidth="2"
                BorderColor="DimGrey"
                CornerRadius="2"
                Background="Transparent"
                Command="{Binding ToSelectionPageCommand}"
                />
        
        <Button Grid.Row="1"
                Grid.Column="3"
                Background="Transparent"
                WidthRequest="105"
                Text="Summary"
                TextColor="Ivory"
                FontSize="12"
                HeightRequest="50"
                BorderWidth="2"
                BorderColor="DimGrey"
                CornerRadius="2"
                Command="{Binding ToSummarizationPageCommand}"
                />
    </Grid>
</ContentPage>